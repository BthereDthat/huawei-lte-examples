                    font_size: 20
                    markup: True
        BoxLayout:
            size_hint: 1, .2
            Button:
                text:"Refresh"
                on_release:
                    root.monitor(20)
            Button:
                text:"Custom Bands"
                on_release:
                    root.band_popup.open()

