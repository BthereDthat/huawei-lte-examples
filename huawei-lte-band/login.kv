LoginPage:
    name: "login_page"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: ip
            hint_text: '4G router ip address, default ip: 192.168.1.1'
            size_hint: 1, .1
            font_size: 20
        TextInput:
            id: passw
            hint_text: 'password'
            password: True
            size_hint: 1, .1
            font_size: 20
        Button:
            text: "go"
            size_hint: 1, .3
            font_size: 50
            on_release:
                root.verify_credentials()

<MonitorPage>:
    name: "monitor"
    title: "Monitoring"
    rsrq: rsrq
    rsrq_quality: rsrq_quality
    rsrp: rsrp
    rsrp_quality: rsrp_quality
    sinr: sinr
    sinr_quality: sinr_quality
    upload_band: upload_band
    upload_rate: upload_rate
    download_band: download_band
    download_rate: download_rate
    id: popup
    content: bl
    BoxLayout:
        id: bl
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label
                text: "Quality Signal"
                markup: True
            BoxLayout:
                orientation: 'horizontal'
                Label
                    text: "RSRQ"
                    font_size: 20
                    markup: True
                Label
                    id: rsrq
                    text: "rsrq"
                    font_size: 20
                    markup: True
                Label
                    id: rsrq_quality
                    text: "rsrq_quality"
                    font_size: 20
                    markup: True
            BoxLayout:
                orientation: 'horizontal'
                Label
                    text: "RSRP"
                    font_size: 20
                    markup: True
                Label
                    id: rsrp
                    text: "rsrp"
                    font_size: 20
                    markup: True
                Label
                    id: rsrp_quality
                    text: "rsrp_quality"
                    font_size: 20
                    markup: True
            BoxLayout:
                orientation: 'horizontal'
                Label
                    text: "RSRP"
                    font_size: 20
                    markup: True
                Label
                    id: sinr
                    text: "sinr"
                    font_size: 20
                    markup: True
                Label
                    id: sinr_quality
                    text: "rsrp_quality"
                    font_size: 20
                    markup: True
            Label
                id: 'fixed'
                text: "Rates"
                markup: True
            BoxLayout:
                orientation: 'horizontal'
                Label
                    text: "Download"
                    font_size: 20
                    markup: True
                Label
                    id: download_rate
                    text: "Download Rate"
                    font_size: 20
                    markup: True
                Label
                    id: download_band
                    text: "Download Band"
                    font_size: 20
                    markup: True
            BoxLayout:
                orientation: 'horizontal'
                Label
